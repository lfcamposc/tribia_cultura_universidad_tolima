        // Configuraci√≥n del juego
        function setupGameModeListener() {
            const gameModeRadios = document.querySelectorAll('input[name="gameMode"]');
            const categorySection = document.getElementById('category-section');

            gameModeRadios.forEach(radio => {
                radio.addEventListener('change', (e) => {
                    if (e.target.value === 'category') {
                        categorySection.style.display = 'block';
                    } else {
                        categorySection.style.display = 'none';
                        selectedCategory = '';
                        document.querySelectorAll('.category-card').forEach(c => c.classList.remove('selected'));
                    }
                });
            });
        }

        function selectCategory(category) {
            selectedCategory = category;
            document.querySelectorAll('.category-card').forEach(c => {
                c.classList.remove('selected');
                if (c.querySelector('.category-name').textContent.includes(category)) {
                    c.classList.add('selected');
                }
            });
        }

        function startGame() {
            const gameMode = document.querySelector('input[name="gameMode"]:checked').value;
            selectedQuestionCount = parseInt(document.querySelector('input[name="questionCount"]:checked').value);
            const useTimer = document.querySelector('input[name="timer"]:checked').value === 'true';

            if (gameMode === 'category' && !selectedCategory) {
                alert('‚ö†Ô∏è Por favor selecciona una categor√≠a.');
                return;
            }

            // Resetear variables del juego
            currentQuestion = 0;
            score = 0;
            correctAnswers = 0;
            streak = 0;
            maxStreak = 0;
            categoryStats = {
                'Fundamentos': { correct: 0, total: 0 },
                'Modelos': { correct: 0, total: 0 },
                'Elementos': { correct: 0, total: 0 },
                'Clima': { correct: 0, total: 0 },
                'Gesti√≥n': { correct: 0, total: 0 }
            };

            // Preparar preguntas
            if (gameMode === 'category') {
                gameQuestions = questionBank.filter(q => q.category === selectedCategory);
            } else {
                gameQuestions = [...questionBank];
            }

            // Mezclar y limitar preguntas
            gameQuestions = shuffleArray(gameQuestions).slice(0, selectedQuestionCount);

            // Configurar timer
            if (useTimer) {
                document.getElementById('timer').style.display = 'block';
            } else {
                document.getElementById('timer').style.display = 'none';
            }

            showScreen('game-screen');
            displayQuestion();
        }

        // Mostrar pregunta actual
        function displayQuestion() {
            if (currentQuestion >= gameQuestions.length) {
                showResults();
                return;
            }

            const question = gameQuestions[currentQuestion];

            // Actualizar estad√≠sticas en pantalla
            document.getElementById('current-question').textContent = currentQuestion + 1;
            document.getElementById('current-score').textContent = score;
            document.getElementById('current-streak').textContent = streak;

            // Actualizar barra de progreso
            const progress = ((currentQuestion) / gameQuestions.length) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';

            // Mostrar pregunta
            document.getElementById('question-text').textContent = question.question;

            // Mostrar opciones
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = '';

            question.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'option';
                optionElement.textContent = String.fromCharCode(65 + index) + '. ' + option;
                optionElement.onclick = () => selectAnswer(index);
                optionsContainer.appendChild(optionElement);
            });

            // Iniciar timer si est√° habilitado
            if (document.getElementById('timer').style.display !== 'none') {
                startTimer();
            }
        }

        // Seleccionar respuesta
        function selectAnswer(selectedIndex) {
            clearTimer();
            const question = gameQuestions[currentQuestion];
            const isCorrect = selectedIndex === question.correct;
            const options = document.querySelectorAll('.option');

            // Deshabilitar clics
            options.forEach(opt => opt.onclick = null);

            // Actualizar estad√≠sticas de categor√≠a
            if (categoryStats[question.category]) {
                categoryStats[question.category].total++;
                if (isCorrect) categoryStats[question.category].correct++;
            }

            if (isCorrect) {
                options[selectedIndex].classList.add('correct');
                score += 100;
                correctAnswers++;
                streak++;
                if (streak > maxStreak) maxStreak = streak;

                // Bonus por racha
                if (streak === 3) {
                    score += 50;
                    alert('üî• ¬°Racha de 3! +50 puntos bonus');
                } else if (streak === 5) {
                    score += 100;
                    alert('üî•üî• ¬°Racha de 5! +100 puntos bonus');
                }
            } else {
                if (selectedIndex !== -1) {
                    options[selectedIndex].classList.add('incorrect');
                }
                options[question.correct].classList.add('correct');
                streak = 0;
            }

            // Mostrar explicaci√≥n despu√©s de un breve delay
            setTimeout(() => {
                showExplanation(isCorrect);
            }, 1500);
        }

        // Mostrar explicaci√≥n
        function showExplanation(wasCorrect) {
            const question = gameQuestions[currentQuestion];

            // Copiar pregunta y opciones para la pantalla de explicaci√≥n
            document.getElementById('explanation-question').textContent = question.question;
            const explanationOptions = document.getElementById('explanation-options');
            explanationOptions.innerHTML = '';

            question.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'option';
                if (index === question.correct) {
                    optionElement.classList.add('correct');
                }
                optionElement.textContent = String.fromCharCode(65 + index) + '. ' + option;
                explanationOptions.appendChild(optionElement);
            });

            // Mostrar t√≠tulo y explicaci√≥n
            document.getElementById('explanation-title').textContent = wasCorrect ? '‚úÖ ¬°Correcto! Explicaci√≥n:' : '‚ùå Respuesta correcta y explicaci√≥n:';
            document.getElementById('explanation-text').textContent = question.explanation;

            // Configurar bot√≥n siguiente
            const nextButton = document.getElementById('next-button');
            if (currentQuestion === gameQuestions.length - 1) {
                nextButton.textContent = 'üèÜ Ver Resultados';
            } else {
                nextButton.textContent = '‚û°Ô∏è Siguiente Pregunta';
            }

            showScreen('explanation-screen');
        }

        // Siguiente pregunta
        function nextQuestion() {
            currentQuestion++;
            if (currentQuestion >= gameQuestions.length) {
                showResults();
            } else {
                showScreen('game-screen');
                displayQuestion();
            }
        }

        // Mostrar resultados finales
        function showResults() {
            const percentage = Math.round((correctAnswers / gameQuestions.length) * 100);
            
            // Determinar medalla y mensaje
            let medal, title, message;
            if (percentage >= 90) {
                medal = 'ü•á';
                title = '¬°Excelente! Eres un experto en Cultura Organizacional';
                message = 'Dominas perfectamente los conceptos de cultura, clima y gesti√≥n del cambio. ¬°Felicitaciones!';
            } else if (percentage >= 75) {
                medal = 'ü•à';
                title = '¬°Muy bien! Buen conocimiento';
                message = 'Tienes un s√≥lido entendimiento de la cultura organizacional. ¬°Sigue as√≠!';
            } else if (percentage >= 60) {
                medal = 'ü•â';
                title = 'Bien hecho';
                message = 'Tienes conocimientos b√°sicos sobre el tema. ¬°Buen trabajo!';
            } else {
                medal = 'üìù';
                title = 'Sigue practicando';
                message = 'La cultura organizacional es compleja. Te recomendamos repasar los conceptos clave.';
            }

            // Encontrar mejor categor√≠a
            let bestCategory = '-';
            let bestRatio = -1;

            for (const [category, stats] of Object.entries(categoryStats)) {
                if (stats.total > 0) {
                    const ratio = stats.correct / stats.total;
                    if (ratio > bestRatio) {
                        bestRatio = ratio;
                        bestCategory = category;
                    }
                }
            }

            // Mostrar datos
            document.getElementById('medal-display').textContent = medal;
            document.getElementById('results-title').textContent = title;
            document.getElementById('results-title').style.color = "#D32F2F"; // Asegurar rojo
            document.getElementById('final-score').textContent = score;
            document.getElementById('correct-percentage').textContent = percentage + '%';
            document.getElementById('best-category').textContent = bestCategory !== '-' ? bestCategory : 'N/A';
            document.getElementById('performance-summary').textContent = message;

            // Guardar en ranking
            saveToRanking(score, percentage);

            showScreen('results-screen');

            // Efecto confetti si es excelente
            if (percentage >= 90) {
                createConfetti();
            }
            
            // Llamar a la funci√≥n de env√≠o de nota
            endGameWithSubmission();
        }

        // Funciones del timer
        function startTimer() {
            timeLeft = 30;
            updateTimerDisplay();
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                if (timeLeft <= 0) {
                    clearTimer();
                    // Auto-seleccionar respuesta incorrecta por timeout
                    selectAnswer(-1);
                }
            }, 1000);
        }

        function clearTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }
        }

        function updateTimerDisplay() {
            const timerElement = document.getElementById('timer');
            timerElement.textContent = `‚è±Ô∏è ${timeLeft}s`;
            if (timeLeft <= 5) {
                timerElement.style.backgroundColor = '#c62828';
                timerElement.style.color = 'white';
            } else if (timeLeft <= 10) {
                timerElement.style.backgroundColor = '#ffb74d'; // Naranja alerta
                timerElement.style.color = '#212529';
            } else {
                timerElement.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
                timerElement.style.color = '#D32F2F';
            }
        }

        // Ranking local
        function saveToRanking(playerScore, percentage) {
            const playerName = studentData.nombre || 'An√≥nimo';
            let ranking = JSON.parse(localStorage.getItem('trivia_cultura_ranking') || '[]');
            ranking.push({
                name: playerName,
                score: playerScore,
                percentage: percentage,
                questions: gameQuestions.length,
                date: new Date().toLocaleDateString()
            });

            // Ordenar por puntuaci√≥n y mantener top 10
            ranking.sort((a, b) => b.score - a.score);
            ranking = ranking.slice(0, 10);
            localStorage.setItem('trivia_cultura_ranking', JSON.stringify(ranking));
        }

        function displayRanking() {
            const rankingList = document.getElementById('ranking-list');
            let ranking = JSON.parse(localStorage.getItem('trivia_cultura_ranking') || '[]');
            rankingList.innerHTML = '';

            if (ranking.length === 0) {
                rankingList.innerHTML = '<p style="text-align: center; padding: 20px; color: #757575;">A√∫n no hay registros en el ranking.</p>';
                return;
            }

            ranking.forEach((item, index) => {
                const div = document.createElement('div');
                div.className = 'ranking-item';
                let medal = '';
                if (index === 0) medal = 'ü•á';
                else if (index === 1) medal = 'ü•à';
                else if (index === 2) medal = 'ü•â';
                else medal = `${index + 1}.`;

                div.innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <span style="font-size: 1.2em; font-weight: bold; width: 40px; color: #D32F2F;">${medal}</span>
                        <div>
                            <div style="font-weight: 600; color: #424242;">${item.name}</div>
                            <div style="font-size: 0.8em; color: #9e9e9e;">${item.date}</div>
                        </div>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-weight: 700; color: #D32F2F;">${item.score} pts</div>
                        <div style="font-size: 0.8em; color: #2e7d32;">${item.percentage}% aciertos</div>
                    </div>
                `;
                rankingList.appendChild(div);
            });
        }

        function clearRanking() {
            if (confirm('¬øEst√°s seguro de borrar el ranking?')) {
                localStorage.removeItem('trivia_cultura_ranking');
                displayRanking();
            }
        }

        // Compartir puntuaci√≥n
        function shareScore() {
            const text = `¬°Acabo de completar la Trivia de Cultura Organizacional UNAD! üéØ\n\nüìä Puntuaci√≥n: ${score} puntos\n‚úÖ Aciertos: ${Math.round((correctAnswers / gameQuestions.length) * 100)}%\nüî• Mejor racha: ${maxStreak}\n\n¬°Pon a prueba tus conocimientos tambi√©n!`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Trivia Cultura Organizacional UNAD',
                    text: text
                });
            } else {
                navigator.clipboard.writeText(text).then(() => {
                    alert('¬°Puntuaci√≥n copiada al portapapeles!');
                }).catch(() => {
                    prompt('Copia este texto para compartir:', text);
                });
            }
        }

        // Funciones auxiliares
        function shuffleArray(array) {
            const newArray = [...array];
            for (let i = newArray.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
            }
            return newArray;
        }

        // Efecto Confetti (Actualizado a colores ROJOS, DORADOS y BLANCOS)
        function createConfetti() {
            const colors = ['#D32F2F', '#FFCDD2', '#FFD700', '#FFFFFF', '#B71C1C']; // Rojo, Rosa, Dorado, Blanco
            const confettiContainer = document.createElement('div');
            confettiContainer.className = 'confetti';
            document.body.appendChild(confettiContainer);

            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    const color = colors[Math.floor(Math.random() * colors.length)];
                    
                    confetti.style.cssText = `
                        position: absolute;
                        left: ${Math.random() * 100}vw;
                        top: -20px;
                        width: 10px;
                        height: 10px;
                        background: ${color};
                        border-radius: 50%;
                        animation: fall 3s linear forwards;
                    `;

                    const fallKeyframes = `
                        @keyframes fall {
                            to {
                                transform: translateY(100vh) rotate(360deg);
                                opacity: 0;
                            }
                        }
                    `;

                    if (!document.querySelector('style[data-confetti]')) {
                        const style = document.createElement('style');
                        style.setAttribute('data-confetti', 'true');
                        style.textContent = fallKeyframes;
                        document.head.appendChild(style);
                    }

                    confettiContainer.appendChild(confetti);

                    setTimeout(() => confetti.remove(), 3000);
                }, i * 100);
            }

            setTimeout(() => confettiContainer.remove(), 5000);
        }

        // Inicializar funciones de registro al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            initializeRegistrationFeatures();
            console.log('üéØ Trivia de Cultura Organizacional UNAD iniciada');
            console.log(`üìö ${questionBank.length} preguntas cargadas`);
        });
    </script>
</body>
