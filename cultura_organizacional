                Maximo_Puntos: "entry.1382745818",
                Porcentaje: "entry.1769198432"
            }
        };

        // Variables globales para el registro de estudiantes
        let studentData = {
            nombre: "",
            documento: "",
            isRegistered: false
        };

        // ============================================================================
        // FUNCIONES PARA EL REGISTRO DE ESTUDIANTES
        // ============================================================================
        function showStudentRegistrationScreen() {
            showScreen('student-registration-screen');
            document.getElementById('studentName').focus();
        }

        function goBackToWelcome() {
            showWelcomeScreen();
        }

        function setupFormValidation() {
            const nameInput = document.getElementById('studentName');
            const idInput = document.getElementById('studentID');

            if (nameInput && idInput) {
                nameInput.addEventListener('input', validateName);
                nameInput.addEventListener('blur', validateName);

                idInput.addEventListener('input', validateID);
                idInput.addEventListener('blur', validateID);

                nameInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && validateForm()) {
                        validateAndContinue();
                    }
                });

                idInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && validateForm()) {
                        validateAndContinue();
                    }
                });
            }
        }

        function validateName() {
            const nameInput = document.getElementById('studentName');
            const feedback = document.getElementById('nameFeedback');
            const name = nameInput.value.trim();

            if (name.length < 2) {
                nameInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è El nombre debe tener al menos 2 caracteres';
                return false;
            } else if (name.length > 100) {
                nameInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è El nombre es demasiado largo';
                return false;
            } else if (!/^[a-z√°√©√≠√≥√∫√º√±A-Z√Å√â√ç√ì√ö√ú√ë\s]+$/.test(name)) {
                nameInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è Solo se permiten letras y espacios';
                return false;
            } else {
                nameInput.className = 'valid';
                feedback.className = 'input-feedback success';
                feedback.textContent = '‚úÖ Nombre v√°lido';
                return true;
            }
        }

        function validateID() {
            const idInput = document.getElementById('studentID');
            const feedback = document.getElementById('idFeedback');
            const id = idInput.value.trim();

            if (id.length < 5) {
                idInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è El documento debe tener al menos 5 caracteres';
                return false;
            } else if (id.length > 20) {
                idInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è El documento es demasiado largo';
                return false;
            } else if (!/^[0-9a-zA-Z]+$/.test(id)) {
                idInput.className = 'invalid';
                feedback.className = 'input-feedback error';
                feedback.textContent = '‚ö†Ô∏è Solo se permiten n√∫meros y letras';
                return false;
            } else {
                idInput.className = 'valid';
                feedback.className = 'input-feedback success';
                feedback.textContent = '‚úÖ Documento v√°lido';
                return true;
            }
        }

        function validateForm() {
            return validateName() && validateID();
        }

        function validateAndContinue() {
            if (!validateForm()) {
                alert('‚ö†Ô∏è Por favor corrige los errores en el formulario antes de continuar.');
                return;
            }

            studentData.nombre = document.getElementById('studentName').value.trim();
            studentData.documento = document.getElementById('studentID').value.trim();
            studentData.isRegistered = true;

            showRegistrationConfirmation();
        }

        function showRegistrationConfirmation() {
            const confirmationHTML = `
                <div style="background-color: #e8f5e9; border: 1px solid #c8e6c9; color: #1b5e20; padding: 15px; border-radius: 8px; margin: 20px 0;">
                    <h3>‚úÖ Registro Exitoso</h3>
                    <p><strong>Nombre:</strong> ${studentData.nombre}</p>
                    <p><strong>Documento:</strong> ${studentData.documento}</p>
                    <p>¬°Listo para comenzar el juego!</p>
                </div>
            `;

            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                display: flex;
                justify-content: center;
                align-items: center;
                z-index: 1000;
            `;

            const modalContent = document.createElement('div');
            modalContent.style.cssText = `
                background-color: white;
                padding: 30px;
                border-radius: 12px;
                max-width: 400px;
                width: 90%;
                text-align: center;
            `;

            modalContent.innerHTML = confirmationHTML + `
                <button onclick="closeConfirmationAndStart()" class="btn-primary" style="margin-top: 20px; width: 100%;">
                    üéÆ Comenzar Juego
                </button>
            `;

            modal.appendChild(modalContent);
            document.body.appendChild(modal);
            window.registrationModal = modal;
        }

        function closeConfirmationAndStart() {
            if (window.registrationModal) {
                document.body.removeChild(window.registrationModal);
                delete window.registrationModal;
            }
            showConfigScreen();
        }

        // ============================================================================
        // FUNCIONES PARA GOOGLE FORMS
        // ============================================================================
        function calculateMaxScore(questionCount) {
            const basePoints = questionCount * 100;
            let maxBonusPoints = 0;
            if (questionCount >= 3) {
                const streakOf3 = Math.floor(questionCount / 3);
                maxBonusPoints += streakOf3 * 50;
            }
            if (questionCount >= 5) {
                const streakOf5 = Math.floor(questionCount / 5);
                maxBonusPoints += streakOf5 * 100;
            }
            return basePoints + maxBonusPoints;
        }

        function submitToGoogleForm(score, questionCount) {
            if (!studentData.isRegistered) {
                alert('‚ö†Ô∏è Error: No hay datos de estudiante registrados.');
                return;
            }

            const maxScore = calculateMaxScore(questionCount);
            const percentage = Math.round((score / maxScore) * 100) + '%';
            const activityName = "Trivia - Cultura Organizacional";

            let formURL = GOOGLE_FORM_CONFIG.FORM_BASE;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.Nombre_Actividad}=${encodeURIComponent(activityName)}`;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.Nombre_Completo}=${encodeURIComponent(studentData.nombre)}`;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.ID_Alumno}=${encodeURIComponent(studentData.documento)}`;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.Puntaje}=${score}`;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.Maximo_Puntos}=${maxScore}`;
            formURL += `&${GOOGLE_FORM_CONFIG.ENTRY.Porcentaje}=${encodeURIComponent(percentage)}`;

            window.open(formURL, '_blank');

            const confirmationHTML = `
                <div style="background-color: #ffebee; border: 1px solid #ffcdd2; color: #b71c1c; padding: 15px; margin-top: 20px; border-radius: 8px; text-align: center;">
                    <h3>üì§ Datos Enviados al Profesor</h3>
                    <p><strong>Estudiante:</strong> ${studentData.nombre}</p>
                    <p><strong>Documento:</strong> ${studentData.documento}</p>
                    <p><strong>Puntuaci√≥n:</strong> ${score} / ${maxScore} puntos (${percentage})</p>
                    <p style="margin-top: 15px; font-size: 0.9rem;">
                        ‚úÖ Se ha abierto una nueva ventana con el formulario de Google.<br>
                        Por favor completa y env√≠a el formulario para finalizar el registro.
                    </p>
                </div>
            `;

            const resultsScreen = document.getElementById('results-screen');
            if (resultsScreen) {
                const existingConfirmation = resultsScreen.querySelector('.submission-confirmation');
                if (existingConfirmation) {
                    existingConfirmation.remove();
                }
                
                const confirmationDiv = document.createElement('div');
                confirmationDiv.className = 'submission-confirmation';
                confirmationDiv.innerHTML = confirmationHTML;
                
                const resultsContent = resultsScreen.querySelector('.screen-content');
                if (resultsContent) {
                    resultsContent.appendChild(confirmationDiv);
                } else {
                    resultsScreen.appendChild(confirmationDiv);
                }
            }
        }

        function showWelcomeScreen() {
            studentData = {
                nombre: "",
                documento: "",
                isRegistered: false
            };
            showScreen('welcome-screen');
        }

        function showConfigScreenWithRegistration() {
            if (!studentData.isRegistered) {
                showStudentRegistrationScreen();
            } else {
                showConfigScreen();
            }
        }

        function endGameWithSubmission() {
            const resultsScreen = document.getElementById('results-screen');
            if (resultsScreen && studentData.isRegistered) {
                const existingBtn = document.getElementById('btn-submit-score');
                if (existingBtn) existingBtn.remove();

                const submitBtn = document.createElement('button');
                submitBtn.id = 'btn-submit-score';
                submitBtn.className = 'btn btn-primary';
                submitBtn.style.marginTop = '10px';
                // Gradiente rojo/morado para destacar
                submitBtn.style.background = 'linear-gradient(135deg, #b71c1c 0%, #880e4f 100%)';
                submitBtn.innerHTML = 'üìù Registrar Nota Oficial';
                submitBtn.onclick = function() {
                    submitToGoogleForm(score, selectedQuestionCount);
                    this.disabled = true;
                    this.innerHTML = '‚úÖ Nota Enviada';
                };

                const buttonContainer = resultsScreen.querySelector('.btn').parentElement;
                if (buttonContainer) {
                    buttonContainer.insertBefore(submitBtn, buttonContainer.firstChild);
                }
            }
        }

        function initializeRegistrationFeatures() {
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                        const target = mutation.target;
                        if (target.id === 'student-registration-screen' && target.classList.contains('active')) {
                            setTimeout(setupFormValidation, 100);
                        }
                    }
                });
            });

            const registrationScreen = document.getElementById('student-registration-screen');
            if (registrationScreen) {
                observer.observe(registrationScreen, { attributes: true });
            }
        }

