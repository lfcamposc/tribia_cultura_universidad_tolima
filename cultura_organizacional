    <script>
        // ============================================================================
        // CONFIGURACI√ìN DEL GOOGLE FORM (DOCENTE: Reemplazar con sus valores)
        // ============================================================================
        const GOOGLE_FORM_CONFIG = {
            // Configuraci√≥n del formulario de Google del usuario
            FORM_BASE: "https://docs.google.com/forms/d/e/1FAIpQLSczh7fa309CJtxWEI5oClVhhgNbha7CuoaFYT45ssW0tFeU7Q/viewform?usp=pp_url",

            // Entry IDs extra√≠dos del formulario real
